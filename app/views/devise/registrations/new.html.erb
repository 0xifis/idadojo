<h2 class="subheader">Sign Up</h2>
<hr />

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
	<%= f.input :name, :required => true,  :autofocus => true, :placeholder => "Name"%>
	<%= f.input :email, :required => true, type: :email, :placeholder => "Email" %>
	<%= f.input :school, :required => true, :placeholder => "School" %>
	<%= f.input :handphone, :required => true, type: :number, :placeholder => "Handphone"%>
	<%= f.input :team_id, :required => true, type: :number, :placeholder => "Team ID"%>
	<%= f.input :password, :required => true, :placeholder => "Password"%>
	<%= f.input :password_confirmation, :required => true, :placeholder => "Confirm Password" %>
</div>

<div class="row">
	<div class="small-11 small-centered large-3 large-offset-3 columns form-offset">
		<%= f.button :submit, "Sign Up", class: "expand" %>
	</div>

</div>

<%= render "devise/shared/links" %>
<% end %>

