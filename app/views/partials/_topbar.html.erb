<div class="contain-to-grid sticky" style="height:45px z-index:1000000">
	<nav class="top-bar">
		<ul class="title-area">
			<!-- Title Area -->
			<li class="name">
				<h1><%= link_to "IDA Dojo", root_path %></h1>
			</li>
			<!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
			<li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
		</ul>

		<section class="top-bar-section">
			<!-- Left Nav Section -->
			<ul class="left">
				<li class="divider"></li>
				<%= nav_link "Home", root_path, ""%>
				<li class="divider"></li>
				<%= nav_link "Contact", pages_contact_path,"" %>
				<li class="divider"></li>
				<% if user_signed_in? %>
				<li><%= nav_link "Team Members", pages_myteam_path, ""  %></li>
				<li class="divider"></li>
				<li><%= nav_link "Team Progress", pages_myteamprogress_path, ""  %></li>
				<li class="divider"></li>

				<%= nav_link "Leaderboard", pages_leaderboard_path, "" %>
				<li class="divider"></li>
				<% end %>
			</ul>

			<!-- Right Nav Section -->
			<ul class="right">
				<% if user_signed_in? %>
				<%= nav_link "#{current_user.name.titleize}", edit_user_registration_path, ""%>
				<li class="divider"></li>
				<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
				<% else %>
				<%= nav_link "Sign up", new_user_registration_path, "" %>
				<li class="divider"></li>
				<%= nav_link "Login", new_user_session_path, "" %>	
				<% end %>
			</ul>
		</section>
	</nav>
</div>